<div class="container my-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Profile</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Profile Overview Card -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">My Profile</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="user-avatar">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <div>
                            <h4 id="displayUsername" class="mb-1">Loading...</h4>
                            <p class="text-muted mb-0" id="displayEmail">loading@email.com</p>
                        </div>
                    </div>

                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="bi bi-journal-text"></i>
                            </div>
                            <div class="stat-info">
                                <span id="notesCount">0</span>
                                <small class="text-muted">Notes</small>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="bi bi-folder"></i>
                            </div>
                            <div class="stat-info">
                                <span id="categoriesCount">0</span>
                                <small class="text-muted">Categories</small>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="bi bi-tags"></i>
                            </div>
                            <div class="stat-info">
                                <span id="tagsCount">0</span>
                                <small class="text-muted">Tags</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Settings Card -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Profile Settings</h5>
                    <div id="saveIndicator" class="text-success" style="display: none;">
                        <i class="bi bi-check-circle-fill"></i> Changes saved
                    </div>
                </div>
                <div class="card-body">
                    <form id="profileForm">
                        <div class="setting-group mb-4">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>

                        <div class="setting-group mb-4">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" readonly>
                            <small class="text-muted">Email cannot be changed</small>
                        </div>

                        <div class="setting-group mb-4">
                            <label class="form-label">Password</label>
                            <button type="button" class="btn btn-outline-secondary w-100" id="togglePassword">
                                Change Password
                            </button>
                            <div id="passwordFields" class="mt-3" style="display: none;">
                                <div class="mb-3">
                                    <label class="form-label">Current Password</label>
                                    <input type="password" class="form-control" id="currentPassword">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">New Password</label>
                                    <input type="password" class="form-control" id="newPassword">
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="button" class="btn btn-outline-danger" id="deleteAccount">
                                Delete Account
                            </button>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-outline-secondary" id="cancelChanges">Cancel</button>
                                <button type="submit" class="btn btn-primary" id="saveChanges">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>