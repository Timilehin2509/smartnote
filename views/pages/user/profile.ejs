<div class="container my-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Profile</li>
        </ol>
    </nav>

    <div class="profile-header">
        <div class="profile-info">
            <div class="user-avatar">
                <i class="bi bi-person-circle"></i>
            </div>
            <div class="profile-meta">
                <h4 id="displayUsername">Loading...</h4>
                <p class="text-muted mb-0" id="displayEmail">loading@email.com</p>
                <p class="text-muted mb-0">Member since <span id="memberSince">...</span></p>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-journal-text"></i>
                </div>
                <div class="stat-info">
                    <span id="notesCount">0</span>
                    <small class="text-muted">Total Notes</small>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-folder"></i>
                </div>
                <div class="stat-info">
                    <span id="categoriesCount">0</span>
                    <small class="text-muted">Categories</small>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-tags"></i>
                </div>
                <div class="stat-info">
                    <span id="tagsCount">0</span>
                    <small class="text-muted">Tags Used</small>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-link-45deg"></i>
                </div>
                <div class="stat-info">
                    <span id="linkedNotesCount">0</span>
                    <small class="text-muted">Connected Notes</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="activity-section">
                <h5 class="mb-3">Recent Activity</h5>
                <div class="card">
                    <div class="list-group list-group-flush" id="recentActivity">
                        <!-- Activity items will be populated here -->
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="settings-section">
                <div class="setting-group">
                    <div class="setting-header">
                        <i class="bi bi-person"></i>
                        <h6 class="mb-0">Account Settings</h6>
                    </div>
                    <form id="profileForm">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" readonly>
                            <small class="text-muted">Email cannot be changed</small>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                    </form>
                </div>

                <div class="setting-group">
                    <div class="setting-header">
                        <i class="bi bi-shield-lock"></i>
                        <h6 class="mb-0">Security</h6>
                    </div>
                    <button class="btn btn-outline-secondary w-100 mb-2" id="togglePassword">
                        Change Password
                    </button>
                    <div id="passwordFields" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="currentPassword">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword">
                            <small class="text-muted">Must be at least 6 characters</small>
                        </div>
                    </div>
                </div>

                <div class="setting-group">
                    <div class="setting-header">
                        <i class="bi bi-trash"></i>
                        <h6 class="mb-0">Danger Zone</h6>
                    </div>
                    <button type="button" class="btn btn-outline-danger w-100" id="deleteAccount">
                        Delete Account
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>